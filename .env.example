# Example .env for literaryshop-api
# Copy this file to .env and fill in real values before running locally.

# Postgres connection string (example):
# DATABASE_URL=postgres://username:password@localhost:5432/literaryshop
DATABASE_URL=

# Port the API listens on
PORT=3001

# JWT Secret key for signing tokens
# Generate a strong random string for production (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production

# Node environment
NODE_ENV=development
